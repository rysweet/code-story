# Production configuration for Code Story
# ggshield:ignore
# ggignore:start
# This file contains configuration for production-like deployment
# ggignore:end

# Core settings
APP_NAME=code-story
VERSION=0.1.0
ENVIRONMENT=production
LOG_LEVEL=INFO

# Authentication
AUTH_ENABLED=false

# Neo4j settings
NEO4J__URI=bolt://neo4j:7687
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=password
NEO4J__DATABASE=neo4j

# Redis settings
REDIS__URI=redis://redis:6379

# OpenAI settings
OPENAI__ENDPOINT=https://api.openai.com/v1
OPENAI__API_KEY=sk-placeholder-not-used
OPENAI__EMBEDDING_MODEL=text-embedding-3-small
OPENAI__CHAT_MODEL=gpt-4o
OPENAI__REASONING_MODEL=gpt-4o
OPENAI__API_VERSION=2025-03-01-preview

# Azure OpenAI settings
AZURE_OPENAI__ENDPOINT=https://adapt-appsci.openai.azure.com
AZURE_OPENAI__API_KEY=sk-placeholder-not-used
AZURE_OPENAI__DEPLOYMENT_ID=gpt-4o

# Service settings
SERVICE__HOST=0.0.0.0
SERVICE__PORT=8000
SERVICE__DEV_MODE=false

# Ensure use of real adapters
USE_REAL_ADAPTERS=true