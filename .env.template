# Code Story Environment Configuration Template
# Copy this file to .env and modify the values appropriately for your environment.
# ggshield:ignore
# ggignore:start
# This entire file contains only example values and placeholders
# No real credentials are stored here
# ggignore:end

#==============================================================================
# REQUIRED SETTINGS - These are the minimum settings needed to run the system
#==============================================================================

# Core settings
APP_NAME=code-story
VERSION=0.1.0
ENVIRONMENT=development  # Options: development, testing, production
LOG_LEVEL=INFO          # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Neo4j connection - REQUIRED
NEO4J__URI=bolt://localhost:7687        # For local development
# NEO4J__URI=bolt://neo4j:7687          # For Docker environments
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=password                # Change this in production!
NEO4J__DATABASE=neo4j

# Redis connection - REQUIRED for real-time progress updates
REDIS__URI=redis://localhost:6379       # For local development
# REDIS__URI=redis://redis:6379         # For Docker environments

# Service connection - REQUIRED 
SERVICE__HOST=localhost                 # For local development
# SERVICE__HOST=0.0.0.0                 # For Docker environments
SERVICE__PORT=8000

#==============================================================================
# OPTIONAL SETTINGS - Additional settings for extended functionality
#==============================================================================

# Authentication (optional)
AUTH_ENABLED=false
# AZURE_TENANT_ID=your-tenant-id       # Required if auth_enabled=true
# AZURE_CLIENT_ID=your-client-id       # Required if auth_enabled=true

# OpenAI settings (required for AI features)
OPENAI__ENDPOINT=https://api.openai.com/v1
# OPENAI__API_KEY=your-api-key-here    # Get this from OpenAI
OPENAI__EMBEDDING_MODEL=text-embedding-3-small
OPENAI__CHAT_MODEL=gpt-4o
OPENAI__REASONING_MODEL=gpt-4o
OPENAI__API_VERSION=2025-03-01-preview

# Azure OpenAI settings (alternative to OpenAI, uncomment to use)
# AZURE_OPENAI__ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI__API_KEY=your-azure-api-key
# AZURE_OPENAI__DEPLOYMENT_ID=gpt-4o

# Azure KeyVault settings (for secure credential storage)
# AZURE__KEYVAULT_NAME=your-keyvault-name
# AZURE__TENANT_ID=your-tenant-id
# AZURE__CLIENT_ID=your-client-id
# AZURE__CLIENT_SECRET=your-client-secret

# Service advanced settings
SERVICE__WORKERS=4
SERVICE__DEV_MODE=true
SERVICE__ENABLE_TELEMETRY=true
SERVICE__WORKER_CONCURRENCY=4

# Telemetry settings
TELEMETRY__METRICS_PORT=9090
TELEMETRY__TRACE_SAMPLE_RATE=1.0