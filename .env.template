# Code Story Essential Configuration
# Copy this file to .env and modify as needed for your environment

# Core connectivity settings
NEO4J__URI=bolt://localhost:7687
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=password
NEO4J__DATABASE=neo4j

# Redis settings
REDIS__URI=redis://localhost:6379

# Service settings
SERVICE__HOST=localhost
SERVICE__PORT=8000

# OpenAI settings (specify either OpenAI or Azure OpenAI)
OPENAI__ENDPOINT=https://api.openai.com/v1
OPENAI__API_KEY=your-api-key

# Azure OpenAI settings (uncomment to use Azure OpenAI instead)
# AZURE_OPENAI__ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI__API_KEY=your-api-key
# AZURE_OPENAI__DEPLOYMENT_ID=gpt-4o

# Environment setting
ENVIRONMENT=development

# Authentication (uncomment to enable)
# AUTH_ENABLED=true
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id

# Container networking (for Docker development)
# If using Docker Compose, uncomment these settings
# NEO4J__URI=bolt://neo4j:7687
# REDIS__URI=redis://redis:6379
# SERVICE__HOST=0.0.0.0