# Core settings
APP_NAME=code-story
VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Authentication
AUTH_ENABLED=false

# Neo4j settings
NEO4J__URI=bolt://localhost:7687
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=your-password-here

# Redis settings
REDIS__URI=redis://localhost:6379

# OpenAI settings
OPENAI__ENDPOINT=https://api.openai.com/v1
OPENAI__API_KEY=your-api-key-here
OPENAI__EMBEDDING_MODEL=text-embedding-3-small
OPENAI__CHAT_MODEL=gpt-4o
OPENAI__REASONING_MODEL=gpt-4o

# Azure OpenAI settings (optional)
#AZURE_OPENAI__ENDPOINT=your-azure-endpoint-here
#AZURE_OPENAI__API_KEY=your-azure-api-key-here
#AZURE_OPENAI__DEPLOYMENT_ID=gpt-4o

# Azure KeyVault settings (optional)
#AZURE__KEYVAULT_NAME=your-keyvault-name
#AZURE__TENANT_ID=your-tenant-id
#AZURE__CLIENT_ID=your-client-id
#AZURE__CLIENT_SECRET=your-client-secret