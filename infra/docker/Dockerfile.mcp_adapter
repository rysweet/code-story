# Dockerfile for MCP Adapter
FROM python:3.12-slim
WORKDIR /app
COPY pyproject.toml poetry.lock* ./
RUN pip install poetry && poetry install --no-root --no-interaction
COPY src/codestory_mcp_adapter ./src/codestory_mcp_adapter
CMD ["poetry", "run", "uvicorn", "codestory_mcp_adapter.main:app", "--host", "0.0.0.0", "--port", "8080"]
