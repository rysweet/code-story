# Dockerfile for codestory_service
FROM python:3.12-slim
WORKDIR /app
COPY pyproject.toml poetry.lock* ./
RUN pip install poetry && poetry install --no-root --no-interaction
COPY src/codestory_service ./src/codestory_service
CMD ["poetry", "run", "uvicorn", "codestory_service.main:app", "--host", "0.0.0.0", "--port", "8000"]
